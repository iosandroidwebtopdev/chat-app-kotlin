<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="?attr/colorPrimary"
                                   android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Spinner
        android:id="@+id/subChatSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/colorPrimary"
        android:textAlignment="center"
        />


    <LinearLayout
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chat_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxWidth="150dp"
                android:text="@string/chat_name"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/subchat_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxWidth="150dp"
                android:text="@string/chat_name"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_drop_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:visibility="gone" />

    </LinearLayout>






    <ImageView
        android:id="@+id/chatInfoImageView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_info_outline_white_24dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/bot_icon"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_toStartOf="@id/chatInfoImageView"
        android:paddingEnd="10dp"
        android:src="@drawable/bot_icon_white"
        android:visibility="gone"
        />


</android.support.v7.widget.Toolbar>
