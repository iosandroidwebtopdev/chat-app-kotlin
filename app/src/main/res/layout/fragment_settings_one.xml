<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu_chat.android.com.edu_chat.controller.settings.SettingsOneFragment">


    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="@string/settings"-->
    <!--android:textColor="@color/White"-->
    <!--android:textSize="20sp"-->
    <!--android:gravity="center"-->
    <!--android:layout_marginBottom="10dp" />-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="@color/toolbarBlack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/settings"
            android:textColor="@color/White"
            android:textSize="20dp"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/settings_fragment_one_education"/>

            <include layout="@layout/settings_fragment_one_account"/>

            <include layout="@layout/settings_fragment_one_notification"/>


            <TextView
                android:id="@+id/settings_account_and_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_up_option_border"
                android:gravity="center|center_vertical"
                android:padding="10dp"
                android:text="@string/account_and_security"
                android:textColor="@color/Black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/settings_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_up_option_border"
                android:gravity="center|center_vertical"
                android:padding="10dp"
                android:text="@string/notifications"
                android:textColor="@color/Black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/settings_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_up_option_border"
                android:gravity="center|center_vertical"
                android:padding="10dp"
                android:text="@string/general"
                android:textColor="@color/Black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_up_option_border"
                android:gravity="center|center_vertical"
                android:padding="10dp"
                android:text="@string/about"
                android:textColor="@color/Black"
                android:textSize="16sp"/>
        </LinearLayout>


    </ScrollView>


    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="10dp"-->
    <!--android:text="This is Settings activity"/>-->
</LinearLayout>
